# ==== Spring Profile & Server ====
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# ==== Database (PostgreSQL) ====
# Example: jdbc:postgresql://<host>:5432/<dbName>
DB_URL=jdbc:postgresql://taskline-db:5432/Taskline
DB_USER=postgres
DB_PASSWORD=CHANGE_ME

# ==== JPA & Flyway ====
DDL_AUTO=none                         # use 'update' in dev if needed
FLYWAY_ENABLED=true
FLYWAY_BASELINE_ON_MIGRATE=true
FLYWAY_CLEAN_DISABLED=true

# ==== Logging ====
LOG_ROOT_LEVEL=INFO                   # set DEBUG in dev if desired

# ==== CORS ====
# Comma-separated. DON'T use '*'.
CORS_ALLOWED_ORIGINS=https://taskline.izzettin.dev

# ==== JWT (HttpOnly Cookie) ====
# In production, set a LONG RANDOM secret (>= 32 bytes)
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_256BIT_SECRET
JWT_ACCESS_TTL_SECONDS=900            # 15 min
JWT_ISSUER=taskline

JWT_COOKIE_NAME=taskline_token
# For cross-site SPA: SameSite=None + Secure=true are required
JWT_COOKIE_SAME_SITE=None             # None | Lax | Strict
JWT_COOKIE_SECURE=true                # can be false in local dev
JWT_COOKIE_PATH=/
# Leave empty if using same host; set a domain only if needed
JWT_COOKIE_DOMAIN=
